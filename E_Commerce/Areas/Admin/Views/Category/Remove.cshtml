@model Category

<div class="card shadow p-3 mt-4">
    <form method="post">
        <h2 class="border-bottom border-2 border-primary pb-2">Delete Category</h2>
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>
        <div class="row pt-1">
            <label asp-for="Name"></label>
            <div>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row pt-3">
            <label asp-for="DisplayOrder"></label>
            <div>
                <input asp-for="DisplayOrder" class="form-control" disabled />
            </div>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row pt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-primary form-control" asp-controller="Category" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
