@model List<Category>

<div class="container">
    <div class="row pb-3 pt-3">
        <div class="col-6 px-0">
            <h2>Category List</h2>
        </div>
        <div class="col-6 px-0 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create new
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Category Dispaly Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Category" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-info mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-danger mx-1">
                                    <i class="bi bi-x-square"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

